<div class="nav-container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <p class="navbar-text"><%= @bulk_discounts.first.merchant.name %></p>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Dashboard', merchant_dashboard_index_path, style: 'pull-right' %>
      <%= link_to 'My Items', merchant_items_path(@bulk_discounts.first.merchant), style: 'pull-right' %>
      <%= link_to 'My Invoices', merchant_invoices_path(@bulk_discounts.first.merchant), style: 'pull-right' %></li>
    </ul>
  </nav>
</div>

<body>
  <div class="row">
    <p class='col-12'>My Bulk Discounts</p>
  </div>

  <p><%= link_to "Create Bulk Discount", new_merchant_bulk_discount_path(@bulk_discounts.first.merchant.id) %></p>

  <div id="bulk-discounts">
  <% if @bulk_discounts != nil %>
    <% @bulk_discounts.each do |discount| %>
      <li><%= link_to "Bulk Discount ##{discount.id}", merchant_bulk_discount_path(@bulk_discounts.first.merchant, discount) %>
      <li>Percent Discount: <%= discount.percent_discount %>
      <li>Quantity Threshold: <%= discount.quantity_threshold %>
      <li><%= link_to "Delete ##{discount.id}", merchant_bulk_discount_path(@bulk_discounts.first.merchant, discount), method: :delete %>
    <% end %>
  <% end %>
  </div>

  <div class="row">
    <p class='col-12'>Upcoming Holidays</p>
  </div>
  <div id="upcoming-holidays">
    <% @facade.holidays.first(3).each do |holiday| %>
      <p><%= holiday.name %>, <%= holiday.date %></p>
    <% end %>
  </div>

</body>
